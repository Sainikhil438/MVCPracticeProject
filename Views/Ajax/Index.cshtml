
@{
    ViewData["Title"] = "Index";
}

<button class="btn-primary btn-sm btn-primary m-2" id="addEmpBtn">Add Employee</button>

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>Id</th>
            <th>Name</th>
            <th>State</th>
            <th>City</th>
            <th>Salary</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody id="table_data"></tbody>
</table>

<div class="modal fade modal" id="EmpModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="empHeading">Add Employee</h1>
                <button class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group" id="empId">
                        <label>Id</label>
                        <input type="text" class="form-control" id="EmployeeId" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" placeholder="Enter Name" class="form-control" id="Name" autocomplete="off"/>
                    </div>
                    <div class="form-group">
                        <label>State</label>
                        <input type="text" placeholder="Enter State" class="form-control" id="State" autocomplete="off"/>
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" placeholder="Enter City" class="form-control" id="City" autocomplete="off"/>
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        <input type="text" placeholder="Enter Salary" class="form-control" id="Salary" autocomplete="off"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="AddEmployee" onclick="AddEmployee();">Save</button>
                <button class="btn btn-warning" id="Editbtn" onclick="UpdateRecord();" style="display:none">Update</button>
                <button class="btn btn-danger btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/custom.js"></script>

